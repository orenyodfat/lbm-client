<android.support.v4.widget.DrawerLayout  
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lazooz.lbm.MainActivity">
    
<FrameLayout 
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical" >

        <LinearLayout
            android:baselineAligned ="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/main_text_cont"
            android:orientation="horizontal"
            android:padding="10dp" >

            <FrameLayout
                android:id="@+id/FrameLayout05"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="5" >

                <TextView
                    android:id="@+id/TextView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mined_km"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/lazooz_main_title_txt" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5dp" >

                    <TextView
                        android:id="@+id/main_distance_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="042.30"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="30sp"
                        android:textColor="@color/lazooz_main_txt" />

                    <TextView
                        android:id="@+id/TextView24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/km"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/lazooz_main_txt" />
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:id="@+id/main_distance_ll"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/main_distance_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/main_arrow1"
                    android:text="Button" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:baselineAligned ="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/main_text_cont"
            android:orientation="horizontal"
            android:padding="10dp" >

            <FrameLayout
                android:id="@+id/FrameLayout04"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="5" >

                <TextView
                    android:id="@+id/TextView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/invited_freinds"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/lazooz_main_title_txt" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5dp" >

                    <TextView
                        android:id="@+id/main_friends_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="210"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                         android:textSize="30sp"
                        android:textColor="@color/lazooz_main_txt" />

                    <TextView
                        android:id="@+id/TextView21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/friends"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/lazooz_main_txt" />
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:id="@+id/main_friends_ll"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/main_friends_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/main_arrow1"
                    android:text="Button" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:baselineAligned ="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/main_text_cont"
            android:orientation="horizontal"
            android:padding="10dp" >

            <FrameLayout
                android:id="@+id/FrameLayout03"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="5" >

                <TextView
                    android:id="@+id/TextView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/times_shaken"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/lazooz_main_title_txt" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5dp" >

                    <TextView
                        android:id="@+id/main_shake_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="35"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                         android:textSize="30sp"
                        android:textColor="@color/lazooz_main_txt" />

                    <TextView
                        android:id="@+id/TextView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/shakes"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/lazooz_main_txt" />
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:id="@+id/main_shake_ll"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/main_shake_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/main_arrow1"
                    android:text="Button" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:baselineAligned ="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/main_text_cont"
            android:orientation="horizontal"
            android:padding="10dp" >

            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="horizontal" >

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/TextView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/potential_zooz"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/lazooz_main_title_txt" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="5dp" >

                        <TextView
                            android:id="@+id/main_zoz_balance_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="120"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                             android:textSize="30sp"
                            android:textColor="@color/lazooz_main_txt" />

                        <TextView
                            android:id="@+id/TextView15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="@string/pz"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/lazooz_main_txt" />
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp" >
                   <!-- 
                     <TextView
                        android:id="@+id/TextView03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TARGET ZOOZ RATE"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/lazooz_main_title_txt" />
                    
                    <TextView
                        android:id="@+id/main_zooz_conversion_rate_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="5dp"
                        android:text="1=0.9"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/lazooz_main_txt"
                        android:textSize="30sp" />
                     -->
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_zoz_balance_ll"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/main_zoz_balance_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/main_arrow1"
                    android:text="Button" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/main_text_cont"
            android:orientation="horizontal"
            android:padding="5dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/critical_mass"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/lazooz_main_title_txt" />

                    <TextView
                        android:id="@+id/main_critical_mass_location_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/lazooz_main_txt" />

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/main_critical_mass_frame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/main_roller" >

                    <ProgressBar
                        android:id="@+id/main_critical_mass_pb"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="1dp"
                        android:max="100"
                        android:progress="50" />

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>


 <ListView
        android:id="@+id/left_drawer"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        
        android:divider="#b0b0b0"
        android:dividerHeight="1dp"
        android:background="#e8e8e8"/>
</android.support.v4.widget.DrawerLayout>